<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 基础层：商户成员申请-Mapper -->
<mapper namespace="com.cndinfo.cndlct.ssp.repository.impl.business.merchant.mapper.MerchantMemberApplicationPOMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap"
               type="com.cndinfo.cndlct.ssp.repository.impl.business.merchant.po.MerchantMemberApplicationPO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="merchant_id" property="merchantId"/>
        <result column="audit_status" property="auditStatus"/>
        <result column="audit_user" property="auditUser"/>
        <result column="audit_time" property="auditTime"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="data_status" property="dataStatus"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="version" property="version"/>
        <result column="create_user_name" property="createUserName"/>
        <result column="update_user_name" property="updateUserName"/>
        <result column="create_org" property="createOrg"/>
        <result column="company_id" property="companyId"/>
        <result column="department_id" property="departmentId"/>
        <result column="account_org_id" property="accountOrgId"/>
        <result column="staff_id" property="staffId"/>
        <result column="idx" property="idx"/>
        <result column="reason" property="reason"/>
        <result column="audit_result" property="auditResult"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, merchant_id, audit_status, audit_user, audit_time, create_time, create_user, update_time,
        update_user, data_status, tenant_id, version, create_user_name, update_user_name, create_org, company_id,
        department_id, account_org_id, staff_id, idx, reason, audit_result
    </sql>

    <update id="modifyApply">
        update ssp_merchant_member_application a set a.audit_status =#{status},a.audit_result
        =#{resultStatus},a.audit_time = now() where a.id=#{id}
    </update>


    <select id="queryMyApplyHistory" resultType="com.cndinfo.cndlct.ssp.customer.merchant.entity.MyApplyHistory">
        <!--  select m.id, m.avatar,m.name,i.name primary_enterprise_name,smma.create_time ,smma.audit_result ,smma.audit_status  from ssp_merchant_member_application smma
          left join ssp_merchant m on smma.merchant_id =m.id and m.data_status =0
          left join ssp_merchant_enterprise_authorization a on smma.merchant_id =a.merchant_id and a.data_status =0
          left join ssp_enterprise_information i on a.credit_code =i.credit_code and i.data_status =0
          <where>
                  <if test="query!=null and query!=''">
                          smma.user_id=#{query} and a.`primary` like 'y' and smma.data_status =0
                  </if>
          </where>-->
        select m.id, m.avatar,m.name,i.name primary_enterprise_name,smma.create_time ,smma.audit_result
        ,smma.audit_status from ssp_merchant_member_application smma
        left join ssp_merchant m on smma.merchant_id =m.id and m.data_status =0
        left join ssp_merchant_enterprise_authorization a on smma.merchant_id =a.merchant_id and a.data_status =0 and
        a.`primary` like 'y'
        left join ssp_enterprise_information i on a.credit_code =i.credit_code and i.data_status =0
        <where>
            <if test="query!=null and query!=''">
                smma.user_id=#{query} and smma.data_status =0
            </if>
        </where>
        order by smma.create_time desc
    </select>

</mapper>