<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 基础层：商户联系人-Mapper -->
<mapper namespace="com.cndinfo.cndlct.ssp.repository.impl.business.merchant.mapper.MerchantContactPOMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cndinfo.cndlct.ssp.repository.impl.business.merchant.po.MerchantContactPO">
        <id column="id" property="id"/>
        <result column="merchant_id" property="merchantId"/>
        <result column="name" property="name"/>
        <result column="telephone" property="telephone"/>
        <result column="email" property="email"/>
        <result column="qq" property="qq"/>
        <result column="wechat" property="wechat"/>
        <result column="type" property="type"/>
        <result column="primary" property="primary"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="data_status" property="dataStatus"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="version" property="version"/>
        <result column="create_user_name" property="createUserName"/>
        <result column="update_user_name" property="updateUserName"/>
        <result column="create_org" property="createOrg"/>
        <result column="company_id" property="companyId"/>
        <result column="department_id" property="departmentId"/>
        <result column="account_org_id" property="accountOrgId"/>
        <result column="staff_id" property="staffId"/>
        <result column="idx" property="idx"/>
        <result column="identity_card_no" property="identityCardNo"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, merchant_id, name, telephone, email, qq, wechat, type, primary, create_time, create_user, update_time,
        update_user, data_status, tenant_id, version, create_user_name, update_user_name, create_org, company_id,
        department_id, account_org_id, staff_id, idx, remark
    </sql>

    <select id="getPrimary">
        select smc.id from ssp_merchant_contact smc where smc.merchant_id=#{merchantId} and smc.`primary` ="y" and
        smc.data_status =0
    </select>

    <update id="setPrimary">
        update ssp_merchant_contact smc set smc.`primary` =#{n} where smc.id =#{contactID}
    </update>

</mapper>